{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Format workspace",
      "command": "Powershell.exe -executionpolicy remotesigned -File ./scripts/format_documents.ps1",
      "problemMatcher": "$tsc"
    },
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "type": "npm",
      "script": "compile",
      "isBackground": false,
      "group": "build",
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "problemMatcher": ["$tsc"]
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": false,
      "group": "build",
      "problemMatcher": ["$tsc"]
    }
  ]
}
